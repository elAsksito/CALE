@model CALE.Models.Adopcion

@{
    ViewData["Title"] = "Detalles de la Adopción";
}

<h1 class="text-center my-4" style="color: #ff5722;">Detalles de la Adopción</h1>

<div class="container d-flex justify-content-center">
    <div class="card shadow-lg" style="max-width: 800px; width: 100%; border: 1px solid #ff5722;">
        <img src="@Model.Animal.ImageUrl" class="card-img-top" alt="Imagen de @Model.Animal.Nombre" style="object-fit: cover; height: 300px; border-bottom: 3px solid #ff5722;" />
        <div class="card-body" style="background-color: #fff7e6;">
            <h4 class="card-title text-center mb-3" style="color: #ff5722;">Adopción de @Model.Animal.Nombre</h4>

            <dl class="row justify-content-center">
                <dt class="col-sm-4" style="color: #6c757d;">Fecha de Adopción:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaAdopcion)</dd>

                <dt class="col-sm-4" style="color: #6c757d;">Animal:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Animal.Nombre) - @Html.DisplayFor(model => model.Animal.Especie)</dd>

                <dt class="col-sm-4" style="color: #6c757d;">Raza:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Animal.Raza)</dd>

                <dt class="col-sm-4" style="color: #6c757d;">Edad:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Animal.Edad) años</dd>

                <dt class="col-sm-4" style="color: #6c757d;">Dueño:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Usuario.Nombre)</dd>
            </dl>
        </div>
        <div class="card-footer text-center" style="background-color: #ff5722;">
            <a asp-action="Index" class="btn btn-light">Volver a la lista</a>
        </div>
    </div>
</div>
