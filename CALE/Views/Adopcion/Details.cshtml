@model CALE.Models.Adopcion

@{
    ViewData["Title"] = "Detalles de la Adopción";
}

<h1 class="text-center my-4">Detalles de la Adopción</h1>

<div class="container d-flex justify-content-center">
    <div class="card shadow-lg" style="max-width: 800px; width: 100%;">
        <img src="@Model.Animal.ImageUrl" class="card-img-top" alt="Imagen de @Model.Animal.Nombre" style="object-fit: cover; height: 300px; border-radius: 4px;" />
        <div class="card-body">
            <h4 class="card-title text-center mb-3">Adopción de @Model.Animal.Nombre</h4>

            <dl class="row justify-content-center">
                <dt class="col-sm-4">Fecha de Adopción:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaAdopcion)</dd>

                <dt class="col-sm-4">Animal:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Animal.Nombre) - @Html.DisplayFor(model => model.Animal.Especie)</dd>

                <dt class="col-sm-4">Raza:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Animal.Raza)</dd>

                <dt class="col-sm-4">Edad:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Animal.Edad) años</dd>

                <dt class="col-sm-4">Dueño:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Usuario.Nombre)</dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
        </div>
    </div>
</div>

