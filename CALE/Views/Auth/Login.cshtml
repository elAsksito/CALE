@model CALE.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body style="background-color: #f7f9fc;">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg p-4" style="border: 1px solid #ff5722;">
                    <h2 class="text-center mb-4" style="color: #ff5722;">Iniciar Sesión</h2>

                    <form method="post">
                        <div class="mb-3">
                            <label for="Email" class="form-label" style="color: #6c757d;">Correo Electrónico</label>
                            <input type="email" class="form-control" id="Email" name="Email" required style="border-color: #ff5722;" />
                        </div>
                        <div class="mb-3">
                            <label for="Contrasenia" class="form-label" style="color: #6c757d;">Contraseña</label>
                            <input type="password" class="form-control" id="Contrasenia" name="Contrasenia" required style="border-color: #ff5722;" />
                        </div>
                        <button type="submit" class="btn btn-primary w-100" style="background-color: #ff5722; border-color: #ff5722;">Iniciar sesión</button>
                    </form>

                    <div class="text-center mt-3">
                        <a href="@Url.Action("Register", "Auth")" style="color: #ff5722;">&iquest;No tienes cuenta? Regístrate aquí</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    @if (TempData["Error"] != null)
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: decodeHtml('@TempData["Error"]'),
                    confirmButtonText: 'Aceptar',
                    background: '#fff7e6',
                    backdrop: true
                });
            });

            function decodeHtml(html) {
                var txt = document.createElement("textarea");
                txt.innerHTML = html;
                return txt.value;
            }
        </script>
    }

</body>
</html>
