@model IEnumerable<CALE.Models.Animal>

@{
    ViewData["Title"] = "Ver Mascotas";
}

<h1 class="text-center my-4" style="color: #ff5722;">Ver Mascotas</h1>

<div class="container">
    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-4 col-sm-6">
                <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none">
                    <div class="card h-100 shadow-sm" style="border: 1px solid #ff5722;">
                        <img src="@item.ImageUrl" class="card-img-top rounded-top" alt="Imagen de @item.Nombre" style="height: 200px; object-fit: cover; border-bottom: 3px solid #ff5722;" />
                        <div class="card-body text-center bg-light" style="background-color: #fff7e6;">
                            <h5 class="card-title text-truncate" style="color: #ff5722;">@item.Nombre</h5>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>

@if (TempData["Success"] != null)
{
    <script>
        function decodeHtml(html) {
            var txt = document.createElement("textarea");
            txt.innerHTML = html;
            return txt.value;
        }
        var successMessage = decodeHtml('@TempData["Success"]');
        Swal.fire({
            title: '¡Éxito!',
            text: successMessage,
            icon: 'success',
            confirmButtonText: 'Aceptar',
            customClass: {
                popup: 'swal2-shadow',
                confirmButton: 'btn btn-primary'
            }
        });
    </script>
}
